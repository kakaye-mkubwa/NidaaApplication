<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:text="Oman Telecommunications"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:text="Customer Service"
        android:textSize="17sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/omantel_card_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/omantel_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Omantel"
                    android:typeface="sans"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:textSize="17sp"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ooredoo_card_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ooredoo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ooredoo"
                    android:layout_gravity="center_horizontal"
                    android:typeface="sans"
                    android:textStyle="normal"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center_horizontal">

       <androidx.cardview.widget.CardView
           android:id="@+id/breakdown_card_view"
           android:layout_width="150dp"
           android:layout_height="150dp"
          android:layout_margin="8dp"
           app:cardCornerRadius="8dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <ImageView
                   android:layout_width="110dp"
                   android:layout_height="110dp"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/national_bank_of_oman"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Renna"
                   android:typeface="sans"
                   android:textStyle="normal"
                   android:textColor="#000"
                   android:textSize="17sp" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/awasr_card_view"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_margin="8dp"
           app:cardCornerRadius="8dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">


               <ImageView
                   android:layout_width="110dp"
                   android:layout_height="110dp"
                   android:layout_gravity="center_horizontal"
                   android:src="@drawable/awasr_logo"/>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:text="Awasr"
                   android:typeface="sans"
                   android:textStyle="normal"
                   android:textColor="#000"
                   android:textSize="17sp" />

           </LinearLayout>

       </androidx.cardview.widget.CardView>

   </LinearLayout>



</LinearLayout>