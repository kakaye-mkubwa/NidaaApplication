<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EmergencyCallActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThemeRed"
                android:text="Emergency hotline"
                android:textColor="@color/colorThemeRedText"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThemeRed"
                android:text="9999"
                android:textColor="@color/colorThemeRedText"
                android:textSize="17sp"
                android:textStyle="normal"
                android:typeface="sans" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Royal Oman Police"
                android:typeface="sans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@color/colorThemeRed"
                android:textColor="@color/colorThemeRedText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 521099"
                android:typeface="sans"
                android:textSize="17sp"
                android:textStyle="normal"
                android:background="@color/colorThemeRed"
                android:textColor="@color/colorThemeRedText"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumer Protection Authority"
                android:typeface="sans"
                android:textSize="17sp"
                android:textStyle="bold"
                android:background="@color/colorThemeRed"
                android:textColor="@color/colorThemeRedText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="800 79009"
                android:typeface="sans"
                android:textSize="17sp"
                android:textStyle="normal"
                android:background="@color/colorThemeRed"
                android:textColor="@color/colorThemeRedText"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThemeRed"
                android:text="Public Authority For Social Insurance"
                android:textColor="@color/colorThemeRedText"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorThemeRed"
                android:text="800 77600"
                android:textColor="@color/colorThemeRedText"
                android:textSize="17sp"
                android:textStyle="normal"
                android:typeface="sans" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>